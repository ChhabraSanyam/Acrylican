# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DATABASE_URL=postgresql://acrylican_admin:YOUR_SECURE_PASSWORD@acrylican.postgres.database.azure.com:5432/postgres

# Redis Configuration
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# Application Security
SECRET_KEY=your_very_long_and_secure_secret_key_here_at_least_32_characters
JWT_SECRET_KEY=your_jwt_secret_key_here_different_from_secret_key
ENCRYPTION_KEY=your_32_character_encryption_key_here

# External API Keys
GEMINI_API_KEY=your_google_gemini_api_key_here

# Cloud Storage Configuration
CLOUD_STORAGE_PROVIDER=aws  # aws, gcp, or cloudflare
CLOUD_STORAGE_BUCKET=your-acrylican-bucket
CLOUD_STORAGE_REGION=us-east-1
CLOUD_STORAGE_ACCESS_KEY=your_cloud_storage_access_key
CLOUD_STORAGE_SECRET_KEY=your_cloud_storage_secret_key
CLOUD_STORAGE_ENDPOINT=  # For Cloudflare R2 or custom S3 endpoints

# Platform API Keys (OAuth will be configured through the UI)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
ETSY_API_KEY=your_etsy_api_key
ETSY_API_SECRET=your_etsy_api_secret
PINTEREST_APP_ID=your_pinterest_app_id
PINTEREST_APP_SECRET=your_pinterest_app_secret
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

ALLOWED_HOSTS=your-azure-vm-ip,your-custom-domain.com,api.your-domain.com
CORS_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com

# Performance Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
MAX_CONCURRENT_POSTS=5
RATE_LIMIT_PER_MINUTE=60
CACHE_TTL=3600  # 1 hour in seconds